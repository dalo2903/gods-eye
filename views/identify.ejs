<% layout('./share/layout.ejs') -%>

  <form action='/identify' method='post' encType="multipart/form-data">
    <div class="form-group">
      <input class="hide" type="file" name="sampleFile" id="image" accept="image/*" required/>
      <div style="width: 1170px;margin: 0 auto;">
        <% include ./share/logo.ejs %>
      </div>
    </div>
    <button class="btn btn-primary" type="submit">IDENTIFY</button>
  </form>

  <script>
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader()
        reader.onload = function (e) {
          $('#preview').attr('src', e.target.result)
        }
        reader.readAsDataURL(input.files[0])
      }
    }

    $('#preview').click(function () {
      $('#image').click()
    })

    $("#image").change(function () {
      readURL(this)
    })
  </script>