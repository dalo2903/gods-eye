<% layout('./share/layout.ejs') -%>

  <form action='/upload' method='post' encType="multipart/form-data">
    <div class="form-group">
      <input class="hide" type="file" name="sampleFile" id="image" accept="image/*" required/>
      <a href="#">
        <img class="img-responsive" style="margin:auto;cursor: pointer;" id="preview" alt="preview" src="favicon.ico" />
      </a>
    </div>
    <div class="form-group">
      <label for="email">Student ID:</label>
      <input type="text" name="id" placeholder="Student ID" required/>
    </div>
    <button class="btn btn-primary" type="submit">UPLOAD</button>
  </form>

  <script>
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader()
        reader.onload = function (e) {
          $('#preview').attr('src', e.target.result)
        }
        reader.readAsDataURL(input.files[0])
      }
    }

    $('#preview').click(function () {
      $('#image').click()
    })

    $("#image").change(function () {
      readURL(this)
    })
  </script>