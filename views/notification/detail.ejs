        <img class="post" src="https://storage.googleapis.com/centering-dock-194606.appspot.com/WIN_20180829_16_02_12_Pro.jpg">
        <div id="box-tmp" class="box"></div>
    </div> -->

    <div class="main main-raised">
        <div class="section section-basic">
            <div class="container">
                <div ng-controller="detailController">
                    <div class="row">
                        <div class="col-sm-6">
                            <link rel="stylesheet" type="text/css" href="/stylesheets/notification.css">
                            <span id="_id" class="hide">
                                <%- _id %>
                            </span>
                            <div id="{{notification._id}}" class="notification">
                                <div>
                                    <h1>{{notification.title}}</h1>
                                </div>
                                <div class="author">by {{notification.userCreated.name}} at {{notification.createdAt | date: "HH:mm dd/MM/yyyy"}}</div>
                                <div class="address">{{ notification.location.name || notification.location.address }}</div>
                                <!-- Carousel -->
                                <div id="carousel{{notification._id}}" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carousel{{notification._id}}" data-slide-to="{{$index}}" ng-class='{active:$first}'></li>
                                    </ol>
                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">
                                        <div class="item"  ng-class='{active:$first}'>
                                            <!-- <img ng-src="{{data.URL}}"> -->
                                            <video  controls>
                                                <source ng-src="{{notification.data.URL}}" type="video/mp4">
                                            </video>
                                        </div>
                                    </div>
                                    <!-- Left and right controls -->
                                    <a class="left carousel-control" href="#carousel{{notification._id}}" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#carousel{{notification._id}}" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/facade.min.js"></script>
    <script src="/javascripts/notification/detail.js"></script>