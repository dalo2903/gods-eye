<% layout('../share/layout.ejs') -%>

<div class="text-left" ng-controller="createController">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="wrapper col-sm-6">
            <h1 class="form-header" style="border-top-left-radius: 10px;border-top-right-radius: 10px">Create post </h1>
            <div class="form-group">
                <label>Title</label>
                <input type="text" ng-model="post.title" placeholder="Title" />
            </div>

            <div class="form-group">
                <label>Files</label>
                <img class="thumb" ng-src="{{ imgSrc }}" ng-repeat="imgSrc in post.images">
                <% include ./drag-and-drop.ejs %>
            </div>

            <div class="form-group">
                <label>Location</label>
                <select id="location" style="width: 100%">
                    <option ng-repeat="location in locations" value="{{ location._id }}">{{ location.address }}</option>
                </select>
            </div>

            <div class="form-group">
                <input id="submit-create-post" type="submit" value="Create" ng-click="createPost()" />
            </div>
            <div class="hide">
                <span id="user-id">
                    <%- user_id %>
                </span>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/post/create.js"></script>

