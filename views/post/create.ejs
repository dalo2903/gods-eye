    <body class="product-page">            
        <div class="section section-gray">       
            <div class="container">
                <div class="main main-raised main-product">
                    <div class="row">
                        <div class="text-left" ng-controller="createController">
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="wrapper col-sm-6">
                                    <form action="/api/post" method="POST">
                                        <h1 class="form-header" style="border-top-left-radius: 10px;border-top-right-radius: 10px">Create post
                                            </h1>
                                            
                                        <div class="form-group ">
                                            <input type="text" name="title" placeholder="Title" class="form-control" />
                                        </div>

                                        <div class="form-group">
                                            <label>Images/Videos</label>
                                            <!-- <img class="thumb" ng-src="{{ imgSrc }}" ng-repeat="imgSrc in post.images"> -->
                                            <input data-max-files="10" class="my-pond" type="file" multiple>
                                        </div>
                                        
                                        <div class="form-group">
                                                <label>Location</label>
                                                <select id="location" class ="selectpicker" data-style="btn btn-primary btn-round" data-size="7" style="width: 100%">
                                                    <option ng-repeat="location in locations" value="{{ location._id }}">{{ location.address }}</option>
                                                </select>
                                            </div>
                                        <div class="form-group">
                                            <input id="submit-create-post" type="submit" value="Create" />
                                        </div>
                                    </form>
                                    <div class="hide">
                                        <span id="user-id">
                                            <%- user_id %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
