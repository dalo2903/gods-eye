<% layout('../share/layout.ejs') -%>

    <style>
        /* https://stackoverflow.com/questions/9397104/javascript-for-draw-rectangle-over-a-image */
        .wrapper {
            position: relative;
        }

        .box {
            position: absolute;
            border: 2px solid #ffffff;
            background-color: transparent;

        }

        #box-tmp {
            top: 270px;
            left: 434px;
            width: 201px;
            height: 201px;
        }
    </style>

    <div class="wrapper">
        <img class="post" src="https://storage.googleapis.com/centering-dock-194606.appspot.com/WIN_20180829_16_02_12_Pro.jpg">
        <div id="box-tmp" class="box"></div>
    </div>

    <div class="row" ng-controller="detailController">
        <div class="col-lg-3">
            <% include ../share/sidebar.ejs -%>
        </div>
        <div class=" col-lg-6">
            <link rel="stylesheet" type="text/css" href="/stylesheets/post.css">
            <span id="_id" class="hide"><%- _id %></span>
            <div id="{{post._id}}" class="post">
                <div>
                    <h1>{{post.title}}</h1>
                </div>
                <div class="author">by {{post.userCreated.name}} at {{post.createdAt | date: "HH:mm dd/MM/yyyy"}}</div>
                <div class="address">{{ post.location.address }}</div>
                <div class="data" ng-repeat="data in post.datas">
                    <div class="wrapper">
                        <img class="post" ng-src="{{data.URL}}">
                        <div id="box-{{$index}}" class="box"></div>
                    </div>
                </div>
                <div class="fb-comments" data-href="http://godseye.ml/<%- _id %>" data-width="100%" data-numposts="2"></div>
                <div class="line">
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/facade.min.js"></script>
    <script src="/javascripts/post/detail.js"></script>