<% layout('../share/layout.ejs') -%>

    <div class="text-left" ng-controller="personController">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="wrapper col-sm-6">
                <h1 class="form-header">Add new person </h1>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" ng-model="person.name" placeholder="Name" />
                </div>
                <div class="form-group">
                    <label>Images</label>
                    <img class="thumb" ng-src="{{ imgSrc }}" ng-repeat="imgSrc in person.images">
                    <% include ./drag-and-drop.ejs %>
                </div>


                <div class="form-group">
                    <input id='submit-create-person' type="submit" value="Create" ng-click="createPerson()" />
                </div>
                <div class="hide">
                    <span id="user-id">
                        <%- user_id %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Existed Modal -->
        <div id="existed-modal" class="modal fade" role="dialog">
            <div class="modal-dialog" style="width:80%">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Existed people</h4>
                    </div>
                    <div class="modal-body" style="width:70%">
                        <form ng-repeat='person in persons'>
                            <label class="radio">
                                <input type="radio" name="optradio"><img src="{{person.url}}" style="width:80%"></label>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <script src="/javascripts/person/create.js"></script>

