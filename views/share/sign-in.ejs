<!doctype html>
<html lang="en" ng-app="GodsEye">

<% include ./head.ejs -%>
<script src="/javascripts/signin.js"></script>
<head>
	<title>Sign In</title>
</head>

<body class="login-page">
	<% include ./header.ejs -%>
	<div class="page-header header-filter" style="background-image: url('lib/assets/img/bg7.jpg'); background-size: cover; background-position: top center;">
		<div ng-controller='SignInController'>
			<div class="container">
				<div class="row">
					<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
						<div class="card card-signup">
							<form class="form" ref='signinForm' id='signinForm'>
								<div class="header header-primary text-center">
									<h4 class="card-title">Log in</h4>
									<div class="social-line">
										<a href="/api/auth/google" class="btn btn-just-icon btn-simple">
											<i class="fab fa-google-plus-g"></i>
										</a>
										<a href="#pablo" class="btn btn-just-icon btn-simple">
											<i class="fab fa-facebook"></i>
										</a>
									</div>
								</div>
								<p class="description text-center">Or Be Classical</p>
								<div class="card-content">

									<div class="input-group">
										<span class="input-group-addon">
											<i class="material-icons">email</i>
										</span>
										<input type="email" class="form-control" placeholder="Email..." name="email">
									</div>

									<div class="input-group">
										<span class="input-group-addon">
											<i class="material-icons">lock_outline</i>
										</span>
										<input type="password" placeholder="Password..." class="form-control" name="password" />
									</div>

									<!-- If you want to add a checkbox to this form, uncomment this code
		
										<div class="checkbox">
											<label>
												<input type="checkbox" name="optionsCheckboxes" checked>
												Subscribe to newsletter
											</label>
										</div> -->
								</div>
								<div class="footer text-center">
									<a class="btn btn-primary btn-simple btn-wd btn-lg" ng-click="signIn()">LOG IN</a>
								</div>
							</form>
						</div>
					</div>
				</div>
			
			</div>

			
		</div>
		<% include ./footer.ejs -%>
	</div>
	
</body>
<style>
.footer {
	margin-top: 50px;
}
</style>
</html>