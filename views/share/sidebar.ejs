<!-- sidebar laptop -->
<style>
    @media only screen and (max-width:1024px) {
        #sidebar-laptop {
            display: none
        }
        #sidebar-mobile {
            display: initial
        }
        .tabbar {
            height: 48px;
            background-color: #000;
            display: -webkit-box;
            display: -moz-box;
            overflow-x: scroll;
            -webkit-overflow-scrolling: touch;
            overflow-y: hidden;
            box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
            position: relative;
            padding: 0 4px;
            z-index: 0;
        }
        .tabbar a.active {
            font-weight: 700;
            color: #fff;
        }
        .tabbar a {
            display: block;
            color: hsla(0, 0%, 100%, .4);
            text-decoration: none;
            line-height: 24px;
            font-weight: 700;
            padding: 12px;
        }
    }

    @media only screen and (min-width:1024px) {
        #sidebar-laptop {
            display: initial
        }
        #sidebar-mobile {
            display: none
        }
        .popular-locations {
            color: black;
            background-color: lightgrey;
            margin-top: 10px
        }
    }
</style>
<div id="sidebar-laptop" class="sidebar text-left" ng-controller='sideBarController'>
    <h2>Popular locations</h2>
    <ul class="nav menu">
        <li ng-repeat="location in locations"><a class="popular-locations" href="#">{{ location.address }}</a></li>
    </ul>
</div>
<!-- sidebar mobile -->
<div id='sidebar-mobile' ng-controller='sideBarController'>
    <nav class='tabbar'>
        <a ng-repeat="location in locations" class="popular-locations" href="#">{{ location.address }}</a>
    </nav>
</div>
<script>
    if ($(window).width() < 1024) {
        $('#sidebar-container').removeClass('col-lg-3')
    }
    else {
        $('#sidebar-container').addClass('col-lg-3')
    }
    var app = angular.module('GodsEye')
    app.controller('sideBarController', ['$scope', 'apiService', function ($scope, apiService) {
        apiService.getLocations()
            .then(function (res) {
                $scope.locations = res.data.locations
            })
            .catch(function (res) {
                console.log(res)
            })

    }])
</script>