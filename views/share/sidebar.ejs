<link rel="stylesheet" type="text/css" href="/stylesheets/sidebar.css">

<!-- sidebar laptop -->
<style>
</style>
<div id="sidebar-laptop" ng-controller='sideBarController' class="sidebar-laptop">
    <div class="container-fluid" style="padding-left: 0; padding-top:70px; text-align: center;">
        <span class="sidebar-header">POPULAR LOCATIONS<span>
    </div>

    <ul id='navMenu' class="nav">
        <li id="{{location._id}}" ng-repeat="location in locations">
            <a class="popular-locations" ng-class="{'active': isActiveLaptop(location._id)}" href="/location/{{location._id}}">
                <i class="fas fa-tag " style="color: #a94442"></i>&nbsp&nbsp{{ location.name || location.address }}
            </a>
        </li>
    </ul>
</div>
<!-- sidebar mobile -->
<div id='sidebar-mobile' ng-controller='sideBarController' class="sidebar-mobile">
    <nav id='tabbar' class='tabbar'>
        <a ng-repeat="location in locations" id="{{location._id}}" class="popular-locations" ng-class="{'active': isActiveMobile(location._id)}"
            href="/location/{{location._id}}">
            {{ location.name || location.address }}
        </a>
    </nav>
</div>
<script src="/javascripts/sidebar.js"></script>