<% layout("../share/layout.ejs") -%>

    <style>
        .form-content {
            background-color: #fefefe;
            margin: 5% auto 15% auto;
            /* 5% from the top, 15% from the bottom and centered */
            border: 1px solid #888;
            width: 80%;
            /* Could be more or less, depending on screen size */
        }

        .btn {
            border-radius: 5px
        }

        .close {
            font-size: 25px;
            opacity: 0.5;
            right: 5px;
            position: absolute;
        }

        .input-group {
            width: 70%;
            margin-left: auto;
            margin-right: auto;
        }

        .input-group {
            width: 70%;
            margin-left: auto;
            margin-right: auto;
        }

        @media only screen and (min-width:768px) {
            #modal-sign-up form {
                width: 50%
            }
            #modal-sign-in form {
                width: 50%
            }
        }

        @media only screen and (max-width:768px) {
            #modal-sign-up form {
                width: 100%
            }
            #modal-sign-in form {
                width: 100%
            }
        }

        #map {
            width: 100%;
            height: 400px;
            margin: 20px auto;
        }
    </style>

    <div ng-controller="SignUpController">
        <form class="form-content" id="signupForm" style="height: 900px">
            <h1 class="text-center">SIGN UP</h1>
            <div class="form-group">
                <label for="name">Full name</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-address-card fa-lg" aria-hidden="true"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Full name" name="name" required>
                </div>
            </div>

            <div class="form-group">
                <label for="email">Email address</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-envelope fa-lg" aria-hidden="true"></i>
                    </span>
                    <input type="email" class="form-control" id="email" placeholder="Email address" name="email" required>
                </div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-key fa-lg" aria-hidden="true"></i>
                    </span>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                </div>
            </div>

            <div class="form-group text-center">
                <label for="location">Location</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-map-marker fa-lg" aria-hidden="true"></i>
                    </span>
                    <input type="text" class="form-control" id="location" placeholder="Location" name="location" required>
                </div>
                <!-- <div class="pac-card" id="pac-card">
                    <div id="pac-container">
                        <input id="pac-input" type="text" placeholder="Enter a location">
                    </div>
                </div> -->
                <div id="map"></div>
                <div id="infowindow-content" class="hide">
                    <img src="" width="16" height="16" id="place-icon">
                    <span id="place-name" class="title"></span><br>
                    <span id="place-address"></span>
                </div>

            </div>
            <button type="button" class="btn btn-primary my-btn" ng-click="signUp()">
                <i class="fa fa-user-plus fa-lg" aria-hidden="true"></i> Sign up</button>
        </form>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB_qcuoPrTgu4tAegUzPCbA7ln296xFDbY&libraries=places&callback=initMap"
        async defer></script>

    <script src="/javascripts/sign-up.js"></script>
